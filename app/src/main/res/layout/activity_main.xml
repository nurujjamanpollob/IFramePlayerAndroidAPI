<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <dev.nurujjamanpollob.iframeplayer.NJPollobYTPlayer
        android:id="@+id/wbvw"
        android:layout_width="match_parent"
        app:youtube_video_url="https://www.youtube.com/watch?v=nCgQDjiotG0"
        android:layout_height="250dp" />



    <EditText
        android:id="@+id/iframe_edittext"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/ifrane_button"
        android:layout_width="100dp"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        android:text="@string/test_iframe" />


</LinearLayout>